                      "description": "Title of the audio sermon"
                    },
                    "preacher": {
                      "type": "string",
                      "description": "Name of the preacher"
                    },
                    "description": {
                      "type": "string",
                      "description": "Description of the audio sermon"
                    },
                    "file": {
                      "type": "string",
                      "format": "binary",
                      "description": "Audio file for the sermon"
                    }
                  },
                  "required": ["title", "preacher", "file"]
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Audio sermon created successfully",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string"
                      },
                      "sermon_id": {
                        "type": "integer"
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Invalid file or missing required fields"
            },
            "500": {
              "description": "Error occurred while creating the audio sermon"
            }
          }
        }
      },
      "/api/v1/audio_sermons/get_audio_sermons/{id}": {
        "get": {
          "summary": "Get an audio sermon by ID",
          "operationId": "getAudioSermon",
          "tags": ["Audio Sermons"],
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": {
                "type": "integer"
              },
              "description": "ID of the audio sermon to retrieve"
            }
          ],
          "responses": {
            "200": {
              "description": "Audio sermon details",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "title": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      },
                      "file_path": {
                        "type": "string"
                      },
                      "uploaded_at": {
                        "type": "string",
                        "format": "date-time"
                      },
                      "preacher": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "404": {
              "description": "Audio sermon not found"
            },
            "500": {
              "description": "Error occurred while retrieving the audio sermon"
            }
          }
        }
      }
    }
  }
  

  