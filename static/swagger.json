{
    "openapi": "3.0.0",
    "info": {
      "title": "Church Web System API",
      "description": "API documentation for the Church Web System.",
      "version": "1.0.0"
    },
    "paths": {
      "/api/v1/users/create": {
        "post": {
          "summary": "Create a new user",
          "operationId": "createUser",
          "tags": ["Users"],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "username": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string"
                    },
                    "role": {
                      "type": "string"
                    }
                  },
                  "required": ["username", "email", "password"]
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "User created successfully"
            },
            "400": {
              "description": "Invalid input"
            },
            "500": {
              "description": "Error occurred while creating the user"
            }
          }
        }
      },
      "/api/v1/users/{id}": {
        "get": {
          "summary": "Get user by ID",
          "operationId": "getUser",
          "tags": ["Users"],
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": {
                "type": "integer"
              },
              "description": "ID of the user to retrieve"
            }
          ],
          "responses": {
            "200": {
              "description": "User details",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "username": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "role": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "404": {
              "description": "User not found"
            },
            "500": {
              "description": "Error occurred while retrieving the user"
            }
          }
        }
      },
      "/api/v1/users/update/{id}": {
        "put": {
          "summary": "Update user details",
          "operationId": "updateUser",
          "tags": ["Users"],
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": {
                "type": "integer"
              },
              "description": "ID of the user to update"
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "username": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "role": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "User updated successfully"
            },
            "404": {
              "description": "User not found"
            },
            "500": {
              "description": "Error occurred while updating the user"
            }
          }
        }
      },
      "/api/v1/users/delete/{id}": {
        "delete": {
          "summary": "Delete user by ID",
          "operationId": "deleteUser",
          "tags": ["Users"],
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": {
                "type": "integer"
              },
              "description": "ID of the user to delete"
            }
          ],
          "responses": {
            "200": {
              "description": "User deleted successfully"
            },
            "404": {
              "description": "User not found"
            },
            "500": {
              "description": "Error occurred while deleting the user"
            }
          }
        }
      },
      "/api/v1/video_sermons/create_video_sermons": {
        "post": {
          "summary": "Create a new video sermon",
          "operationId": "createVideoSermon",
          "tags": ["Video Sermons"],
          "requestBody": {
            "required": true,
            "content": {
              "multipart/form-data": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": "string",
                      "description": "Title of the video sermon"
                    },
                    "preacher": {
                      "type": "string",
                      "description": "Name of the preacher"
                    },
                    "description": {
                      "type": "string",
                      "description": "Description of the video sermon"
                    },
                    "file": {
                      "type": "string",
                      "format": "binary",
                      "description": "Video file for the sermon"
                    }
                  },
                  "required": ["title", "preacher", "file"]
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Video sermon created successfully",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string"
                      },
                      "sermon_id": {
                        "type": "integer"
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Invalid file or missing required fields"
            },
            "500": {
              "description": "Error occurred while creating the video sermon"
            }
          }
        }
      },
      "/api/v1/video_sermons/get_video_sermons/{id}": {
        "get": {
          "summary": "Get a video sermon by ID",
          "operationId": "getVideoSermon",
          "tags": ["Video Sermons"],
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": {
                "type": "integer"
              },
              "description": "ID of the video sermon to retrieve"
            }
          ],
          "responses": {
            "200": {
              "description": "Video sermon details",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "title": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      },
                      "file_path": {
                        "type": "string"
                      },
                      "uploaded_at": {
                        "type": "string",
                        "format": "date-time"
                      },
                      "preacher": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "404": {
              "description": "Video sermon not found"
            },
            "500": {
              "description": "Error occurred while retrieving the video sermon"
            }
          }
        }
      },
      "/api/v1/video_sermons/update_video_sermons/{id}": {
        "put": {
          "summary": "Update a video sermon by ID",
          "operationId": "updateVideoSermon",
          "tags": ["Video Sermons"],
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": {
                "type": "integer"
              },
              "description": "ID of the video sermon to update"
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "multipart/form-data": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": "string",
                      "description": "Title of the video sermon"
                    },
                    "preacher": {
                      "type": "string",
                      "description": "Name of the preacher"
                    },
                    "description": {
                      "type": "string",
                      "description": "Description of the video sermon"
                    },
                    "file": {
                      "type": "string",
                      "format": "binary",
                      "description": "Video file for the sermon (optional)"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Video sermon updated successfully"
            },
            "404": {
              "description": "Video sermon not found"
            },
            "500": {
              "description": "Error occurred while updating the video sermon"
            }
          }
        }
      },
      "/api/v1/video_sermons/delete_video_sermons/{id}": {
        "delete": {
          "summary": "Delete a video sermon by ID",
          "operationId": "deleteVideoSermon",
          "tags": ["Video Sermons"],
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": {
                "type": "integer"
              },
              "description": "ID of the video sermon to delete"
            }
          ],
          "responses": {
            "200": {
              "description": "Video sermon deleted successfully"
            },
            "404": {
              "description": "Video sermon not found"
            },
            "500": {
              "description": "Error occurred while deleting the video sermon"
            }
          }
        }
      },
      "/api/v1/audio_sermons/create_audio_sermons": {
        "post": {
          "summary": "Create a new audio sermon",
          "operationId": "createAudioSermon",
          "tags": ["Audio Sermons"],
          "requestBody": {
            "required": true,
            "content": {
